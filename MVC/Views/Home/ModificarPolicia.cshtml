@{
    ViewData["Title"] = "Modificar Policia";
}

<div class="text-center">
    <h1 class="display-4">Modificar Policia</h1>
    <br><br><br>
    <h3><u>Completa el formulario para modificar un policia</u></h3><br>
</div>
    
    <form method="post" autocomplete="off" action='@Url.Action("GuardarPolicia2", "Home")'>
        @Html.AntiForgeryToken()
        <div style="margin-left: 39%;">
            <input type="hidden" name="Idpolicia" value="@ViewBag.Id">
            Nombre Completo: <input type="text" name="nombre" size="15" value="@ViewBag.Nombre"><br><br>
            DNI: <input type="text" name="DNI" size="29" maxlength="8" minlength="8" value="@ViewBag.DNI"><br><br>
            Fecha Nacimiento: <input type="date" name="fechaNacimiento" size="20" value='@(((DateTime)ViewBag.FechaNacimiento).ToString("dd/MM/yyyy"))' required> @(((DateTime)ViewBag.FechaNacimiento).ToString("dd/MM/yyyy"))<br><br>
            Rol: <input type="text" list="rol" name="rol" size="30" required value="@ViewBag.Rol"><br><br>
            <datalist id="rol">
                <option value="Vial"></option>
                <option value="Patrullero"></option>
                <option value="Administrador"></option>
                <option value="Detective"></option>
            </datalist>
            N° de Placa: <input type="text" name="numeroPlaca" size="22" value="@ViewBag.NumeroPlaca"><br><br>
            Contraseña: <input type="password" name="password" size="22"  value="@ViewBag.Password" required><br><br>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Guardar Policia">
            <input class="btn btn-danger" type="reset" value="Borrar datos ingresados">
            <br><br>
            <a href='@Url.Action("ListarPolicias", "Home")' class="btn btn-secondary">Cancelar</a>
        </div>
    </form>

